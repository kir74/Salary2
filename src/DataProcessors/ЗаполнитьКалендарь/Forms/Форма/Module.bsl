&НаСервереБезКонтекста
Процедура ЗаполнитьНаСервере()

 	Для ном= 0 по 366 Цикл
 	
		ТекДата = '20200101'+86400*Ном;
		
		Запись = РегистрыСведений.Календарь.СоздатьМенеджерЗаписи();
		Запись.Дата = ТекДата;
		Запись.Признак = ?(ДеньНедели(ТекДата)< 6, 1,0);
		Запись.Записать();
				 	
 	КонецЦикла;
		
КонецПроцедуры